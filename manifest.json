{
  "manifest_version": 3,
  "name": "GeoFS Auto Open Scripts",
  "version": "1.0",
  "description": "Automatically opens your Google Docs scripts when you open GeoFS.",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "GeoFS Scripts Helper"
  },
  "host_permissions": [
    "*://*.geo-fs.com/*"
  ]
}
